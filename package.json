{
  "name": "file-preview-js",
  "version": "0.1.0",
  "description": "文件预览系统 - 支持45种文件格式的纯前端预览工具",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.{js,jsx}",
    "lint:fix": "eslint src/**/*.{js,jsx} --fix",
    "format": "prettier --write src/**/*.{js,jsx,css,html}"
  },
  "keywords": [
    "file-preview",
    "preview",
    "office",
    "pdf",
    "image",
    "video",
    "audio",
    "javascript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "xlsx": "^0.18.5",
    "pdfjs-dist": "^3.11.174",
    "mammoth": "^1.6.0",
    "pptxgenjs": "^3.12.0",
    "jszip": "^3.10.1",
    "marked": "^9.1.6",
    "fabric": "^5.3.0",
    "file-saver": "^2.0.5",
    "mime-types": "^2.1.35"
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "vitest": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "@vitest/coverage-v8": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}